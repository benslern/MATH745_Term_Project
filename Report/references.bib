	doi = {10.48550/arXiv.1701.04050},
	abstract = {We prove finite-time singularity formation for De Gregorio's model of the three-dimensional vorticity equation in the class of \$L{\textasciicircum}p{\textbackslash}cap C{\textasciicircum}α({\textbackslash}mathbb\{R\})\$ vorticities for some \$α{\textgreater}0\$ and \$p{\textless}{\textbackslash}infty\$. We also prove finite-time singularity formation from smooth initial data for the Okamoto-Sakajo-Wunsch models in a new range of parameter values. As a consequence, we have finite-time singularity for certain infinite-energy solutions of the surface quasi-geostrophic equation which are \$C{\textasciicircum}α\$-regular. One of the difficulties in the models we consider is that there are competing {\textbackslash}emph\{nonlocal\} stabilizing effects (advection) and destabilizing effects (vortex stretching) which are of the same size in terms of scaling. Hence, it is difficult to establish the domination of one effect over the other without having strong control of the solution. We conjecture that strong solutions to the De Gregorio model exhibit the following behavior: for each \$0{\textless}α{\textless}1\$ there exists an initial \$ω\_0{\textbackslash}in C{\textasciicircum}α({\textbackslash}mathbb\{R\})\$ which is compactly supported for which the solution becomes singular in finite-time; on the other hand, solutions to De Gregorio's equation are global whenever \$ω\_0{\textbackslash}in L{\textasciicircum}p{\textbackslash}cap C{\textasciicircum}\{1\}({\textbackslash}mathbb\{R\})\$ for some \$p{\textless}{\textbackslash}infty\$. Such a dichotomy seems to be a genuinely non-linear effect which cannot be explained merely by scaling considerations since \$C{\textasciicircum}α\$ spaces are scaling subcritical for each \$α{\textgreater}0\$.},
	urldate = {2025-11-30},
	publisher = {arXiv},
	author = {Elgindi, Tarek M. and Jeong, In-Jee},
	month = feb,
	year = {2017},
	note = {arXiv:1701.04050 [math]},
	keywords = {Mathematics - Analysis of PDEs, Mathematics - Classical Analysis and ODEs},
	file = {Preprint PDF:C\:\\Users\\bensl\\Zotero\\storage\\VGHI3622\\Elgindi and Jeong - 2017 - On the Effects of Advection and Vortex Stretching.pdf:application/pdf;Snapshot:C\:\\Users\\bensl\\Zotero\\storage\\UKWIG8XN\\1701.html:text/html},
}

