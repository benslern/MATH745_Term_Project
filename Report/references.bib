	author = {Protas, Bartosz},
	month = jun,
	year = {2022},
	note = {arXiv:2112.14917 [math]},
	keywords = {Mathematics - Analysis of PDEs, Physics - Fluid Dynamics, Mathematics - Optimization and Control},
	pages = {20210035},
	file = {Preprint PDF:C\:\\Users\\bensl\\Zotero\\storage\\BLQNCIPV\\Protas - 2022 - Systematic Search For Extreme and Singular Behavior in Some Fundamental Models of Fluid Mechanics.pdf:application/pdf;Snapshot:C\:\\Users\\bensl\\Zotero\\storage\\YP44BPFY\\2112.html:text/html},
